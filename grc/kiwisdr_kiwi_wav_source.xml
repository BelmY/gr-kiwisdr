<?xml version="1.0"?>
<block>
  <name>kiwi_wav_source</name>
  <key>kiwisdr_kiwi_wav_source</key>
  <category>[kiwisdr]</category>
  <import>import kiwisdr</import>
  <make>kiwisdr.kiwi_wav_source($filename, $ref_freq)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>File</name>
    <key>filename</key>
    <value></value>
    <type>file_open</type>
  </param>
  <param>
    <name>Reference signal frequency</name>
    <key>ref_freq</key>
    <value>0.0</value>
  </param>

  <source>
    <name>out</name>
    <type>complex</type>
  </source>
  <source>
    <name>ref</name>
    <type>complex</type>
    <optional>q</optional>
  </source>
</block>
