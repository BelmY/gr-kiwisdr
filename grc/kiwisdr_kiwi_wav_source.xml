<?xml version="1.0"?>
<block>
  <name>kiwi_wav_source</name>
  <key>kiwisdr_kiwi_wav_source</key>
  <category>[kiwisdr]</category>
  <import>import kiwisdr</import>
  <make>kiwisdr.kiwi_wav_source($filename)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>filename</name>
    <key>filename</key>
    <type>string</type>
  </param>

  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
